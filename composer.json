{ "name": "dbeurive/slim",
  "version": "1.0.0",
  "description": "This package contains a controller manager for the SLIM framework",
  "license": "Creative Commons Attribution 4.0 International Public License",
  "autoload": {
    "psr-4": {
      "dbeurive\\Slim\\": "src",
      "dbeurive\\Slim\\bin\\": "bin"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "dbeurive\\Slim\\Test\\controller\\": "tests/www/controller"
    }
  },
  "require": {
    "slim/slim": "^3.0",
    "symfony/console": "*",
    "jan-swiecki/simple-annotations": "*",
    "dbeurive/util": "*"
  },
  "require-dev": {
    "phpunit/phpunit": ">=5.5.0",
    "dbeurive/slim-requester": "*"
  },
  "bin": ["bin/slim-controller.php"]
}
